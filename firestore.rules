
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return exists(/databases/$(database)/documents/vles/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/vles/$(request.auth.uid)).data.isAdmin == true;
    }
    
    match /users/{userId} {
      allow create: if request.auth != null;
      allow read, update, write: if request.auth != null && request.auth.uid == userId;
      allow get, list: if isAdmin();
    }

    match /vles/{vleId} {
      allow create: if request.auth != null;
      allow get: if request.auth != null;
      allow list: if isAdmin();
      allow update: if (request.auth != null && request.auth.uid == vleId) || isAdmin();
    }
    
    match /tasks/{taskId} {
      allow get: if request.auth != null && (
        resource.data.creatorId == request.auth.uid ||
        resource.data.assignedVleId == request.auth.uid ||
        isAdmin()
      );
      allow list: if isAdmin();
      allow create: if request.auth != null && request.auth.uid == request.resource.data.creatorId;
      allow update: if request.auth != null && (
        isAdmin() || 
        request.auth.uid == resource.data.assignedVleId || 
        request.auth.uid == resource.data.creatorId
      );
    }
    
    match /notifications/{notificationId} {
      allow read, write, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    match /services/{serviceId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    match /camps/{campId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    match /campSuggestions/{suggestionId} {
        allow create: if request.auth != null && exists(/databases/$(database)/documents/vles/$(request.auth.uid));
        allow read, delete: if isAdmin();
    }

    match /paymentRequests/{reqId} {
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
        allow read, update: if isAdmin();
    }
  }
}
