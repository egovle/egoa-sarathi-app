rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to profile pictures for any authenticated user
    match /profile-pictures/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // Task related documents
    match /tasks/{taskId}/{allPaths=**} {
      // Allow write by anyone authenticated (server will validate user role)
      allow write: if request.auth != null;
      // Allow read only by admins, the task creator, or the assigned VLE
      allow read: if request.auth != null && (
                    exists(/databases/$(database)/documents/vles/$(request.auth.uid)) && get(/databases/$(database)/documents/vles/$(request.auth.uid)).data.isAdmin == true
                    ||
                    exists(/databases/$(database)/documents/tasks/$(taskId)) && get(/databases/$(database)/documents/tasks/$(taskId)).data.creatorId == request.auth.uid
                    ||
                    exists(/databases/$(database)/documents/tasks/$(taskId)) && get(/databases/$(database)/documents/tasks/$(taskId)).data.assignedVleId == request.auth.uid
                  );
    }
    
    // Group chat files can be written by authenticated users (VLEs/Admins)
    // and read by them as well.
    match /group_chat_files/{fileName} {
        allow read, write: if request.auth != null && exists(/databases/$(database)/documents/vles/$(request.auth.uid));
    }
    
    // Training materials can be written by admins and read by authenticated users
    match /training_materials/{fileName} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && exists(/databases/$(database)/documents/vles/$(request.auth.uid)) && get(/databases/$(database)/documents/vles/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}
