rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow any authenticated user to upload files related to a task.
    // This is necessary for the task creation and document upload features.
    match /tasks/{taskId}/{allPaths=**} {
      allow write: if request.auth != null;
    }

    // Allow authenticated users to upload their profile pictures
    match /profile-pictures/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to upload files to camp chats or as final certificates
    match /camp_chat_files/{allPaths=**} {
       allow write: if request.auth != null;
    }
    match /training_materials/{allPaths=**} {
       allow write: if request.auth != null;
    }


    // By default, only allow authenticated users to read files.
    // You might want to make these rules more granular in the future
    // (e.g., only allow a task's creator or assigned VLE to read its files).
    match /{allPaths=**} {
      allow read: if request.auth != null;
    }
  }
}
