rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow any authenticated user to read/write files in the tasks folder.
    // This allows customers and VLEs to upload documents and certificates.
    // For production apps, you might want to tighten these rules further.
    match /tasks/{taskId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
