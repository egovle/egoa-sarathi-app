
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Grant access to task-related files for the task creator, assigned VLE, or an admin.
    match /tasks/{taskId}/{allPaths=**} {
      function isOwner() {
        let task = get(/databases/$(database)/documents/tasks/$(taskId)).data;
        return request.auth.uid == task.creatorId || request.auth.uid == task.assignedVleId;
      }
      
      function isAdmin() {
        return exists(/databases/$(database)/documents/vles/$(request.auth.uid)) &&
               get(/databases/$(database)/documents/vles/$(request.auth.uid)).data.isAdmin == true;
      }
      
      allow read, write: if request.auth != null && (isOwner() || isAdmin());
    }
  }
}
