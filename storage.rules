rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow uploads to a user-specific folder within tasks
    match /tasks/{userId}/{documentId} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow admins to read all task files
    match /tasks/{userId}/{allPaths=**} {
      allow read: if request.auth != null && get(/databases/(default)/documents/vles/$(request.auth.uid)).data.isAdmin == true;
    }

    // Allow users to read their own files
    match /tasks/{userId}/{documentId} {
        allow read: if request.auth != null && request.auth.uid == userId;
    }

    // Allow profile picture uploads
    match /profile-pictures/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow anyone to read profile pictures
    match /profile-pictures/{userId}/{allPaths=**} {
      allow read;
    }
    
    // Allow anyone to read training materials
    match /training_materials/{allPaths=**} {
        allow read;
        allow write: if request.auth != null && get(/databases/(default)/documents/vles/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Allow anyone to read camp and chat files
    match /group_chat_files/{allPaths=**} {
        allow read;
        allow write: if request.auth != null;
    }

     match /camp_chat_files/{allPaths=**} {
        allow read;
        allow write: if request.auth != null;
    }
  }
}
