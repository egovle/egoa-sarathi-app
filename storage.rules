
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Allow authenticated users to upload to a folder named after the task ID
    match /tasks/{taskId}/{allPaths=**} {
      allow write: if request.auth != null;
    }

    // Allow users to upload/update their own profile picture
    match /profile-pictures/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow any authenticated user to upload/read training materials and chat files
    match /training_materials/{allPaths=**} {
        allow read;
        allow write: if request.auth != null;
    }

    match /group_chat_files/{allPaths=**} {
        allow read;
        allow write: if request.auth != null;
    }
  }
}
