rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files for authenticated users
    match /{allPaths=**} {
      allow read: if request.auth != null;
    }

    // Allow uploads to specific folders for authenticated users.
    match /tasks/{taskId}/{allPaths=**} {
      allow write: if request.auth != null;
    }
    
    match /group_chat_files/{fileName} {
      allow write: if request.auth != null;
    }

    match /profile-pictures/{userId}/{fileName} {
      allow write: if request.auth.uid == userId;
    }

    match /training_materials/{fileName} {
      allow write: if request.auth != null;
    }
  }
}
