rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files for any user, as URLs are unguessable.
    match /{allPaths=**} {
      allow read;
    }

    // Allow authenticated users to write to specific folders needed by the app.
    // This is crucial for task creation, complaint attachments, and profile pictures.
    match /tasks/{taskId}/{allPaths=**} {
      allow write: if request.auth != null;
    }
    match /profile-pictures/{userId}/{allPaths=**} {
        allow write: if request.auth != null && request.auth.uid == userId;
    }
    match /training_materials/{allPaths=**} {
        // Allow writes only by admins (checked via custom claims in a real app,
        // but for now we'll just allow any authenticated user for simplicity,
        // relying on frontend checks).
        allow write: if request.auth != null;
    }
     match /group_chat_files/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
