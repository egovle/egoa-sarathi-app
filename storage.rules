rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow read access to everyone for profile pictures
    match /profile-pictures/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow read access for authenticated users to task-related files
    // More specific rules can be implemented if needed (e.g., only creator, VLE, admin)
    match /tasks/{taskId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

     // Allow reads for authenticated users
    match /group_chat_files/{fileName} {
        allow read: if request.auth != null;
        allow write: if request.auth != null;
    }

    // Allow reads for authenticated users
    match /training_materials/{fileName} {
        allow read: if request.auth != null;
        // Only allow writes if the user is an admin (custom claim needed)
        allow write: if request.auth != null;
    }

    // Deny all other access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
