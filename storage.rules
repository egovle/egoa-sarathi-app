rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow any authenticated user to upload to the tasks folder.
    // Security is handled by Firestore rules on the task document itself.
    match /tasks/{taskId}/{allPaths=**} {
      allow write: if request.auth != null;
      allow read: if request.auth != null; 
    }

    // Users can only write to their own profile picture folder.
    match /profile-pictures/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Admins can upload training materials, anyone can read.
    match /training_materials/{allPaths=**} {
      allow read;
      allow write: if request.auth != null; // Further secured by Firestore rules on who can add to the collection
    }

    // Participants in the group chat can upload files.
     match /group_chat_files/{allPaths=**} {
      allow read;
      allow write: if request.auth != null; // Further secured by app logic
    }
  }
}
